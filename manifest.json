{
  "manifest_version": 2,
  "name": "Passphrase Filler",
  "version": "1.3",
  "description": "Automatically fills dropdowns on a specific website",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "clipboardRead",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/icon32.jpg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
